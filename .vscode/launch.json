    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Application with lldb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "showDisplayString": true,
            "linux": {
                "MIMode": "lldb",
                "miDebuggerPath": "/usr/bin/lldb"
            },
            "osx": {
                "MIMode": "lldb"
            }
        }

    ]
}